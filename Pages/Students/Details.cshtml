@page
@model TRAILES.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Fname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Fname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Lname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Lname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.GradeLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.GradeLevel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Registered)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Registered)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.priorityRemaining)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.priorityRemaining)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Cabin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Cabin.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.EventAttendances)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Event Name</th>
                    <th>Priority Given</th>
                </tr>
                @foreach (var item in Model.Student.EventAttendances)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Event.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Priority)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

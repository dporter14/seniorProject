@page
@model TRAILES.Pages.Events.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.MaxAttendance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.MaxAttendance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.StartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.StartTime)
        </dd>
                <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.EventAttendances)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Student Name</th>
                    <th>Grade</th>
                    <th>Priority Given</th>
                </tr>
                @foreach (var item in Model.Event.EventAttendances)
                {
                    <tr>
                        <td>
                            @{var name = item.Student.Lname + ", " + item.Student.Fname;}
                            @Html.DisplayFor(modelItem => name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.GradeLevel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Priority)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <form method="post">
        <input type="hidden" asp-for="Event.EventID" />
        <input type="submit" value="Register" class="btn btn-primary" />
    </form>
    <a asp-page="./Index">Back to List</a>
</div>

@page
@model TRAILES.Pages.Cabins.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cabin[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cabin[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cabin[0].BedCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cabin[0].BedsRegistered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cabin[0].Chapperone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cabin) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BedCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BedsRegistered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chapperone)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CabinID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CabinID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CabinID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@page
@model TRAILES.Pages.Cabins.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cabin</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cabin.CabinID" />
            <div class="form-group">
                <label asp-for="Cabin.Name" class="control-label"></label>
                <input asp-for="Cabin.Name" class="form-control" />
                <span asp-validation-for="Cabin.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cabin.Gender" class="control-label"></label>
                <select asp-for="Cabin.Gender" class="form-control"></select>
                <span asp-validation-for="Cabin.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cabin.BedCount" class="control-label"></label>
                <input asp-for="Cabin.BedCount" class="form-control" />
                <span asp-validation-for="Cabin.BedCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cabin.BedsRegistered" class="control-label"></label>
                <input asp-for="Cabin.BedsRegistered" class="form-control" />
                <span asp-validation-for="Cabin.BedsRegistered" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cabin.Chapperone" class="control-label"></label>
                <input asp-for="Cabin.Chapperone" class="form-control" />
                <span asp-validation-for="Cabin.Chapperone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

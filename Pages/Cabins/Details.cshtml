@page
@model TRAILES.Pages.Cabins.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cabin</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cabin.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cabin.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cabin.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cabin.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cabin.BedCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cabin.BedCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cabin.BedsRegistered)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cabin.BedsRegistered)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cabin.Chapperone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cabin.Chapperone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cabin.Students)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Name</th>
                    <th>Grade</th>
                </tr>
                @foreach (var item in Model.Cabin.Students)
                {
                    <tr>
                        <td>
                            @{var name = item.Lname + ", " + item.Fname;}
                            @Html.DisplayFor(modelItem => name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GradeLevel)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Cabin.CabinID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
